{
  "name": "minipx_web",
  "private": true,
  "version": "1.0.0",
  "description": "Modern web dashboard for minipx reverse proxy",
  "author": "Minipx Team",
  "license": "MIT",
  "repository": "",
  "type": "module",
  "packageManager": "pnpm@10.18.2",
  "scripts": {
    "build-api": "cargo build --release",
    "run-api": "cargo run --bin minipx_web",
    "dev": "vite",
    "build-frontend": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "watch": "cargo watch -x \"run --bin minipx_web\" -C dist -N --why -w ../src-actix/",
    "build": "pnpm run build-frontend && pnpm run build-api",
    "start": "pnpm run build && cargo run --bin minipx_web --release"
  },
  "dependencies": {
    "@heroui/react": "^2.7.11",
    "@iconify-icon/react": "^3.0.1",
    "framer-motion": "^11.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.1.3"
  },
  "devDependencies": {
    "@types/react": "18.3.26",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "8.21.0",
    "@typescript-eslint/parser": "8.21.0",
    "@vitejs/plugin-react": "4.3.4",
    "autoprefixer": "10.4.16",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.18",
    "postcss": "8.4.31",
    "postcss-import": "15.1.0",
    "sass": "1.83.4",
    "sass-loader": "16.0.4",
    "tailwindcss": "3.4.17",
    "typescript": "5.7.3",
    "vite": "6.3.6"
  }
}
